<div class="recipe-btns">
  <a type="button" class="btn btn-outline-success recipe-add-btn" href="/recipe/add">Add your Own Recipe</a>
  <a type="button" class="btn btn-outline-success recipe-back-btn" href="/personalPage">Back to home</a>
</div>

<table class="table caption-top recipe-table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Name</th>
      <th scope="col">Total Calories</th>
      <th scope="col">Ingredients List</th>
    </tr>
  </thead>
  <tbody id="recipe_form">
    {{#each recipeInputs}}
        <tr>
            <td>{{this.dishName}}</td>
            <td>{{this.calories}}</td>
            <td>
              {{#each this.ingredients}}
                {{this.quantity}}g {{this.name}}
              {{/each}}
           </td>
        </tr>
    {{/each}}
  
</table>

